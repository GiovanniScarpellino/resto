<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/couleurFond">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Modification du profil"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/SplitLine_hor1"
            android:layout_width="350dp"
            android:layout_height="3dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="#afafaf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <EditText
            android:id="@+id/champ_nom_restaurant"
            android:layout_width="@dimen/champs_text_largeur"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/style_champs_texte"
            android:ems="10"
            android:hint="Nom du restaurant"
            android:inputType="textPersonName"
            android:padding="@dimen/champs_texte_padding"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/couleurBoutonActive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SplitLine_hor1" />

        <EditText
            android:id="@+id/champ_description_restaurant"
            android:gravity="top|left"
            android:layout_width="@dimen/champs_text_largeur"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/style_champs_texte"
            android:ems="10"
            android:hint="Description du restaurant"
            android:inputType="textMultiLine"
            android:minLines="6"
            android:padding="@dimen/champs_texte_padding"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/couleurBoutonActive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/champ_nom_restaurant" />

        <EditText
            android:id="@+id/champ_adresse_restaurant"
            android:layout_width="@dimen/champs_text_largeur"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/style_champs_texte"
            android:ems="10"
            android:hint="Adresse du restaurant"
            android:inputType="textPersonName"
            android:padding="@dimen/champs_texte_padding"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/couleurBoutonActive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/champ_description_restaurant" />

        <EditText
            android:id="@+id/champ_telephone_restaurant"
            android:layout_width="@dimen/champs_text_largeur"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/style_champs_texte"
            android:ems="10"
            android:hint="Téléphone du restaurant"
            android:inputType="phone"
            android:padding="@dimen/champs_texte_padding"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/couleurBoutonActive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/champ_adresse_restaurant" />

        <EditText
            android:id="@+id/champ_mail_restaurant"
            android:layout_width="@dimen/champs_text_largeur"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/style_champs_texte"
            android:ems="10"
            android:hint="Mail du restaurant"
            android:inputType="textWebEmailAddress"
            android:padding="@dimen/champs_texte_padding"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/couleurBoutonActive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/champ_telephone_restaurant" />

        <EditText
            android:id="@+id/champ_mot_de_passe_restaurant"
            android:layout_width="@dimen/champs_text_largeur"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/style_champs_texte"
            android:ems="10"
            android:hint="Mot de passe du restaurant"
            android:inputType="textPassword"
            android:padding="@dimen/champs_texte_padding"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/couleurBoutonActive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/champ_mail_restaurant" />

        <Button
            android:id="@+id/action_valider_modifications_restaurant"
            android:layout_width="@dimen/bouton_largeur"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/style_bouton"
            android:text="Valider"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/champ_mot_de_passe_restaurant" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>